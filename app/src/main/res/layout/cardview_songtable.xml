<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_songtable_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        android:layout_margin="@dimen/card_margin"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/news_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:id="@+id/card_songtable_title"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:textSize="30sp"
                    android:text="Blurred Lines - Robin Thicke/T.I./Pharrell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>
                <TextView
                    android:textColor="@color/text"
                    android:id="@+id/card_songtable_message"
                    android:textSize="15sp"
                    android:text="aaaa"
                    android:layout_below="@+id/card_songtable_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点歌人：芋头"
                    android:id="@+id/card_songtable_user"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/card_songtable_message"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送给：所有异地恋的朋友"
                    android:id="@+id/card_songtable_to"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/card_songtable_user"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <View
                    android:id="@+id/card_songtable_Lines"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@+id/card_songtable_to"
                    android:background="@android:color/darker_gray"
                    />

                <TextView
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放时间：05月11日 中午"
                    android:id="@+id/card_songtable_playtime"
                    android:layout_below="@+id/card_songtable_Lines"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"/>

                <Button
                    android:background="@drawable/button_played"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未播放"
                    android:id="@+id/card_songtable_Checkbotton"
                    android:layout_below="@+id/card_songtable_Lines"
                    android:layout_alignEnd="@+id/card_songtable_Lines"/>
            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>